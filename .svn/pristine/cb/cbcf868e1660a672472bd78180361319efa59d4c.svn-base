.right-bar {
	// padding: 15px 0 0 15px;
	.btn-group {
		.btn {
			border-radius: 0;
		}
	}
	.nav-select {
		// margin: 15px 0 0 15px;
		.selected {
			border-bottom: none;
		}
	}
	.user-container {
		margin-top: 18px;
		.search-key{
			margin-top: 20px;
			.user-input{
				width: 135px;
				float: left;
				margin-right: 15px;
			}
		}
		.user-table{
			margin: 18px 15px 18px 0;
			tr{
				vertical-align: middle;
				text-align: center;
				td{
					vertical-align: middle;
					p{
						padding-left: 30%;
						text-align: left;
					}
					img{
						width: 50px;
					}
					
				}
			}
			th{
				text-align: center;
				background-color: #d7d7d7;
			}
			a{
				cursor: pointer;
			}
		}
	}
}
.link{
	word-break: break-word;
    width: 200px;
}
.enable{
	color: #ff0000;
}
.color-red{
	color: red;
}
#myModal .modal-body{
	.operation-type{
		overflow: hidden;
		margin-bottom: 15px;
		.span-title{
			text-align: right;
			float: left;
			line-height: 30px;
			display: inline-block;
			width: 70px;
		}
		.options{
			float: left;
			width: 135px;
			display: inline-block;
		}
		.type_input{
			overflow: hidden;
			margin-bottom: 16px;
		}
	}
	.isHidden{
		.type_input:nth-child(2){
			display: none;
		}
		.type_input:nth-child(3){
			display: none;
		}
	}
	.operation-reason{
		height: 150px;
	}
	.next-div{
		padding: 15px;
		background-color: #D7D7D7;
		text-align: center;
		.btn-save{
			margin: 10px;
		}
	}
	
}