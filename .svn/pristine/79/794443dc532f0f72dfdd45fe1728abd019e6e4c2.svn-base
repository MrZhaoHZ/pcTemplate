.right-bar {
	// padding: 15px 0 0 15px;
	.btn-group {
		.btn {
			border-radius: 0;
		}
	}
	.nav-select {
		// margin: 15px 0 0 15px;
		.selected {
			border-bottom: none;
		}
	}
	.user-container {
		margin-top: 18px;
		ul{
			margin-top: 18px;
			li{
				overflow: hidden;
				margin: 30px;
				.span-prompt{
					color: #cac9c9;
				}
				.span-left{
					float: left;
					display: inline-block;
					width: 70px;
					text-align: right;
				}
				.input-long{
					display: inline-block;
					width: 350px;
				}
				.user-content{
					width: 350px;
					height: 150px;
				}
			}
		}
	}
	.text{
		margin-left: 70px;
		margin-bottom: 20px;
		.span-left{
			float: left;
			display: inline-block;
			width: 70px;
			text-align: right;
		}
		.user-content{
			width: 350px;
			height: 150px;
		}
	}
	.block{
		display: none;
		margin-left: 70px;
		overflow: hidden;
		.per_block{
			overflow: hidden;
			padding: 10px;
		    border: 1px solid #ccc;
		    display: inline-block;
		    border-radius: 5px;
		    margin: 10px 72px;
			p{
				margin: 16px 0;
				.left{
					float: left;
				}
				.right{
					width: 316px;
					display: inline-block;
				}
				.add_img{
					background-size: 100%;
					cursor: pointer;
					display: inline-block;
					border: 1px solid #ccc;
				    color: #ccc;
				    font-size: 50px;
				    width: 60px;
				    height: 60px;
					text-align: center;
					vertical-align: middle;
					line-height: 54px;
				}
				.dele{
					margin-left: 40px;
				}
				.add_article{
					margin-left: 6px;
				}
			}
		}
	}
	.add_block{
		margin: 10px 144px;
		display: none;
	}
	.next-div{
		padding: 15px;
		background-color: #D7D7D7;
		text-align: center;
		.btn-next{
			margin: 10px;
		}
	}
}
#myModal .modal-body{
	overflow: hidden;
	#home_content{
		p{
			cursor: pointer;
			padding: 10px;
			border-bottom: 1px #ccc solid;
		}
	}
	#home_profile{
		p{
			padding-top: 20px;
			margin-bottom: 0;
			.span_left{
				display: inline-block;
				width: 70px;
				text-align: right;
				float: left;
				margin-left: 20px;
			}
			.input_short{
				display: inline;
				width: 270px;
				margin-left: 10px;
			}
		}
	}
}
.confirm{
	display: none;
}
#img-upload-modal {
	.modal-body {
		// min-height: 500px;
		.nav-select {
			.active {
				border-bottom: none;
				background-color: #fff;
			}
		}
		.img-item {
			padding: 15px;
			overflow-y: hidden;
			// text-align: justify;
			img {
				float: left;
				display: inline-block;
				margin: 10px 20px;
				width: 90px;
				height: 90px;
				cursor: pointer;
			}
			.pager {
				text-align: left;
				padding-left: 20px;
				a {
					border-radius: 0;
				}
			}
		}
		.img-upload {
			// min-height: 300px;
			padding: 15px;
			.upload-btn {
				margin-top: 15px;
				text-align: center;
			}
		}
		.img-network {
			// min-height: 300px;
			padding: 15px;
			.use-btn {
				margin-top: 15px;
				text-align: center;
			}
		}
	}
	.modal-body {
		// min-height: 350px;
		.modal-tab {
			min-height: 310px;
			.img-item-container {
				overflow-y: hidden;
			}
		}
	}
	#fileList {
	    overflow-y: hidden;
	    .file-item {
	    	float: left;
	    	img {
	    		width: 60px;
	    		height: 60px;
	    	}
	    }
	}
	.webuploader-container {
	    position: relative;
	    display: inline-block;
	    // font-size: 18px;
	    // background: #00b7ee;
	    border-radius: 3px;
	    // line-height: 44px;
	    // padding: 0 30px;
	    // color: #fff;
	    // margin: 0 auto 20px auto;
	    cursor: pointer;
	    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);

	    .webuploader-pick {
		    position: relative;
		    // display: inline-block;
		    cursor: pointer;
		    // background: #00b7ee;
		    padding: 6px 15px;
		    color: #fff;
		    text-align: center;
		    border-radius: 3px;
		    overflow: hidden;
		}
		.webuploader-element-invisible {
		    position: absolute !important;
		    clip: rect(1px,1px,1px,1px);
		    // width: 82px !important;
		    // height: 40px !important; 
		}
	}
}