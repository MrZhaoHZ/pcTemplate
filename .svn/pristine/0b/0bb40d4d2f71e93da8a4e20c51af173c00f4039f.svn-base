.right-bar {
	// padding: 15px 0 0 15px;
	.btn-group {
		display: block;
		overflow: hidden;
		.btn {
			border-radius: 0;
		}
	}
	.nav-select {
		// margin: 15px 0 0 15px;
		.selected {
			border-bottom: none;
		}
	}
	.user-container {
		display: inline-block;
		width: 650px;
		margin-top: 20px;
		border: 1px solid #ccc;
		height: 650px;
		margin-top: 18px;
		p{
			margin: 16px 5%;
			border-bottom: 1px solid #ccc;
			padding: 12px 0;
			.span-left{
				width: 15%;
				display: inline-block;
			}
			.span-right{
				width: 30%;
				display: inline-block;
			}
		}
		.no-border{
			border-bottom: none;
		}
		.user-table{
			width: 90%;
		    
			margin: 18px 15px 0px 0;
			margin-left: 5%;
			tr{
				text-align: center;
			}
			th{
				text-align: center;
				background-color: #d7d7d7;
			}
			a{
				cursor: pointer;
			}
		}
	}
}