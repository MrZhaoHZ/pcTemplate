	<link rel="icon" href="//bsstest1.yyzws.com/leaf_manager_web/static/favicon.ico">
	<title>微商管理</title>
	<link href="//bsstest1.yyzws.com/leaf_manager_web/static/libs/bootstrap-3.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="//bsstest1.yyzws.com/leaf_manager_web/static/css/common.css?v=2.0.32" rel="stylesheet">
	<link rel="stylesheet" href="//bsstest1.yyzws.com/leaf_manager_web/static/libs/jquery-pager-plugin-master/Pager.css" type="text/css">
	<link rel="stylesheet" href="//bsstest1.yyzws.com/leaf_manager_web/static/libs/jquery-ztree/3.5.12/css/zTreeStyle/zTreeStyle.min.css" type="text/css">
	<link rel="stylesheet" href="//bsstest1.yyzws.com/leaf_manager_web/static/libs/Font-Awesome-3.2.1/css/font-awesome.min.css" type="text/css">
	<link rel="stylesheet" href="//bsstest1.yyzws.com/leaf_manager_web/static/libs/layer/skin/layer.css" type="text/css">
	<link href="//bsstest1.yyzws.com/leaf_manager_web/static/css/role-management.css?v=2.0.32" rel="stylesheet">
</head>
<body>
<input type="hidden" name="nav-active" value="02">
<input type="hidden" name="menu-active" value="0202">
<div class="container main-container">
	<div class="left-bar" id="menu-container">
	</div>
	<div class="right-bar">
		<div class="role-container list-group">
			<div class="btn-group nav-select">
			  <!-- <a class="btn btn-default" href="user-management-list.html">用户管理</a> -->
			  <a type="button" class="btn btn-default selected" href="role-management.html">角色管理</a>
			  <!-- <a type="button" class="btn btn-default" href="#">管理员日志</a> -->
			</div>
			<br><br>
			<button type="button" class="btn btn-success" id="add-role-btn" style="display: none;">添加角色</button>
			<div class="role-list" id="role-list">
				<table class="table table-bordered">
				<thead>
				  <tr>
					<th>角色名称</th>
					<th>角色描述</th>
					<th>角色人数</th>
					<th>操作</th>
				  </tr>
				</thead>
				<tbody id="role-body">
				  <!-- <tr>
					<td>客服</td>
					<td>日常客户服务</td>
					<td>3</td>
					<td class="operate"><a href="#">编辑</a><a href="#">删除</a></td>
				  </tr> -->
				</tbody>
			  </table>
			  <div id="pager"></div>
			</div>
		</div>
		<div class="role-edit edit-group">
			<div class="btn-group role-heaer">
			  <button type="button" class="btn btn-default selected">角色设置</button>
			</div>
			<div class="role-info">
				<input type="hidden" id="role-id">
				<form class="form-horizontal" role="form">
				  <div class="form-group">
					<label for="role-name" class="col-sm-2 control-label">名称：</label>
					<div class="col-sm-4">
					  <input type="email" class="form-control" id="role-name" placeholder="请填写角色名称">
					</div>
				  </div>
				  <div class="form-group">
					<label for="role-name" class="col-sm-2 control-label">描述：</label>
					<div class="col-sm-4">
					  <textarea class="form-control" rows="3" placeholder="请填写角色描述" id="role-description"></textarea>
					</div>
				  </div>
				  <div class="form-group">
					<label for="role-name" class="col-sm-2 control-label">权限：</label>
					<div class="col-sm-4">
					  <div id="role-choise" class="role-choise ztree"></div>
					</div>
				  </div>
				</form>
				<!-- <div id="role-choise" class="role-choise ztree"></div> -->
				<div class="tool" id="role-edit-tool" style="display: none;">
					<button type="button" class="btn btn-default" id="save-role">保存</button>
					<button type="button" class="btn btn-success" id="cancel-save-role">取消</button>
				</div>
			</div>
		</div>
	</div>
</div>
<script src="//bsstest1.yyzws.com/leaf_manager_web/static/libs/jquery/jquery-1.10.2.js"></script>
